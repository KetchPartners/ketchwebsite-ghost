{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{> header}}
</header>

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<div class="grid-container">
	<div class="grid-container section-container">
		<div class="orbit clean-hero-slider" role="region" aria-label="Ketch Partners" data-orbit>
	  		<div class="orbit-wrapper">

	    		<ul class="orbit-container">

	      			<li class="orbit-slide">
				        <figure class="orbit-figure">
				          <img class="orbit-image" src="{{asset 'img/industries-header-800x350.jpg'}}" alt="Shipping Industry">
				          <figcaption class="orbit-caption">
				            <h1>Industries</h1>
				            <p>Leveraging the power of SAP Industry Solutions and Best Practices.</p>


				          </figcaption>
				        </figure>
	      			</li>

	    		</ul>
	  		</div>

		</div>
	</div>

</div>

<div class="grid-container services-page">
  <div class="grid-x grid-margin-x">
      <div class="cell large-12 section-container"  id="newsletter-sticky">
        <div class="grid-x grid-padding-x small-up-1 medium-up-2 large-up-2" data-equalizer data-equalize-by-row="true">
          
        {{#get "posts" filter="tags:Industries"}}
           {{#foreach posts}}

		         <div class="cell">
		            <div class="card industry-card" data-equalizer-watch>
		              <div class="card-divider primary-header">
		                <h2 id="industry-discrete-manufacturing">{{title}}</h2>
		              </div>
		              <img class="article-image" src="{{img_url feature_image size="m"}}" alt="{{title}}" itemprop="image" />

		              <div class="card-section">
		                {{content}}

		             </div>
		            </div>
		          </div>

             {{/foreach}}
        {{/get}}


        </div>
      </div>
   </div>
</div>


{{/post}}

{{!-- The #contentFor helper here will send everything inside it up to the matching #block helper found in default.hbs --}}
{{#contentFor "scripts"}}

{{/contentFor}}